{
  "name": "cursordone",
  "version": "0.1.0",
  "private": true,
  "description": "A modern task management system with AI integration",
  "keywords": [
    "task-management",
    "ai",
    "next.js",
    "supabase",
    "typescript"
  ],
  "author": "Jon Grant",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonthebeef/cursordone.git"
  },
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
